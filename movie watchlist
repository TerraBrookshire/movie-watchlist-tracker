BEGIN
    DISPLAY "Welcome to your Movie Watchlist!"
    
    SET watchlist = empty list
    
    REPEAT
        DISPLAY menu:
            1. Add a movie
            2. View watchlist
            3. Remove a movie
            4. Quit
        PROMPT "Enter your choice:"
        READ choice
        
        IF choice = 1 THEN
            PROMPT "Enter movie title:"
            READ title
            PROMPT "Enter genre:"
            READ genre
            PROMPT "Enter year:"
            READ year
            CREATE movie = (title, genre, year)
            ADD movie to watchlist
            DISPLAY "Movie added to watchlist!"
        
        ELSE IF choice = 2 THEN
            IF watchlist is empty THEN
                DISPLAY "Your watchlist is empty."
            ELSE
                DISPLAY "Your Watchlist:"
                FOR each movie in watchlist DO
                    DISPLAY movie title, genre, year
                END FOR
            END IF
        
        ELSE IF choice = 3 THEN
            PROMPT "Enter the title of the movie to remove:"
            READ removeTitle
            SET found = FALSE
            FOR each movie in watchlist DO
                IF movie title = removeTitle THEN
                    REMOVE movie from watchlist
                    SET found = TRUE
                    DISPLAY "Movie removed from watchlist!"
                    BREAK
                END IF
            END FOR
            IF found = FALSE THEN
                DISPLAY "Movie not found in watchlist."
            END IF
        
        ELSE IF choice = 4 THEN
            DISPLAY "Goodbye! Happy watching!"
        
        ELSE
            DISPLAY "Invalid choice. Please try again."
        END IF
        
    UNTIL choice = 4
END
